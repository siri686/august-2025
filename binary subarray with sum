class Solution:
    def numSubarraysWithSum(self , nums: List[int], goal: int) -> int:
        # binary subarrays where sum == goal 
        def func(nums, goal):
            if goal < 0:
                return 0
            Sum = 0
            cnt = 0 
            n = len(nums)
            left, right = 0, 0
            while right < n:
                Sum += nums[right]

                while Sum > goal:
                    Sum -= nums[left]
                    left += 1

                cnt += (right - left + 1)
                right += 1
            return cnt

        return func(nums, goal) - func(nums, goal - 1)
